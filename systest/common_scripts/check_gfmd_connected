#
# Check gfmd on given host is connected to master gfmd
#
check_gfmd_connected()
{
	HOSTNAME=`$GFSERVICE $DEBUG get_host $1`
	I=0
	while [ $I -lt $3 ]; do
		STATE=`$GFSERVICE $DEBUG gfcmd $2 gfmdhost -l | \
			awk "/${HOSTNAME}/{ print \\\$1 }"`
		if [ X$STATE = X+ ]; then
			return 0
		fi
		sleep 1
		I=`expr $I + 1`
	done

	return 1
}
