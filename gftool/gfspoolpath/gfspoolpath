#!/bin/sh

for i
do
	gfstat $i | awk '
	$1 == "Inode:" {
		inum=$2
		igen=$4
		printf "data/%04X%04X/%02X/%02X/%02X/%02X%04X%04X%04X%04X\n", 
			inum/(65536.0*65536.0*65536.0),
			inum/(65536.0*65536.0)%65536,
			inum/(256.0*65536.0)%256,
			(inum/65536.0)%256,
			(inum/256.0)%256,
			inum%256,
			igen/(65536.0*65536.0*65536.0),
			igen/(65536.0*65536.0)%65536,
			igen/65536.0%65536,
			igen%65536
		exit
	}'
done
