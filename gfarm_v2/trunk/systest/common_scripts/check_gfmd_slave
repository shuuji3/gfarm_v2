#
# Check given host is slave server of gfmd
#
check_gfmd_slave()
{
	HOSTNAME=`$GFSERVICE $DEBUG get_host $1`
	I=0
	while [ $I -lt $3 ]; do
		MODE=`$GFSERVICE $DEBUG gfcmd $2 gfmdhost -l | \
			awk "/${HOSTNAME}/{ print \\\$2 }"`
		if [ X$MODE = Xslave ]; then
			return 0
		fi
		sleep 1
		I=`expr $I + 1`
	done

	return 1
}
